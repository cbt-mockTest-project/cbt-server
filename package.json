    "@socket.io/redis-adapter": "^8.2.1",
    "@socket.io/sticky": "^1.0.3",
    "@types/node-telegram-bot-api": "^0.57.6",
    "apollo-server-express": "^3.10.3",
    "aws-sdk": "^2.1235.0",
    "axios": "^1.2.1",
    "bcrypt": "^5.1.0",
    "cheerio": "^1.0.0-rc.12",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
